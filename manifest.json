{
  "manifest_version": 3,
  "name": "Text Helper UI",
  "version": "1.0",
  "description": "Injects a helper UI into text inputs",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}